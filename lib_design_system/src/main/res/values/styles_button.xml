<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TDC.TextAppearance.Font.Medium" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TDC.TextAppearance.Button" parent="TDC.TextAppearance.Font.Medium">
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.045</item>
    </style>

    <style name="TDC_Widget.Button" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">@dimen/button_height_regular</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/dimen_margin_side</item>
        <item name="android:layout_marginEnd">@dimen/dimen_margin_side</item>
        <item name="android:textAppearance">@style/TDC.TextAppearance.Button</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TDC.Widget.Button.Contained" parent="TDC_Widget.Button">
        <item name="android:background">@drawable/bg_button_contained</item>
        <item name="android:textAppearance">@style/TDC.TextAppearance.Button</item>
        <item name="android:textColor">@color/button_contained_style_text</item>
    </style>

    <style name="TDC.Widget.Button.Outlined" parent="TDC_Widget.Button">
        <item name="android:background">@drawable/bg_button_outlined</item>
        <item name="android:textColor">@color/button_outlined_style_text</item>
    </style>

</resources>