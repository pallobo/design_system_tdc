<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.example.lib_design_system.button.TDCButton
        android:id="@+id/button_contained"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_margin_side"
        app:buttonType="contained"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:text="Bot達o contido" />

    <com.example.lib_design_system.button.TDCButton
        android:id="@+id/button_outlined"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_margin_side"
        app:buttonType="outlined"
        app:layout_constraintEnd_toEndOf="@id/button_contained"
        app:layout_constraintStart_toStartOf="@id/button_contained"
        app:layout_constraintTop_toBottomOf="@id/button_contained"
        app:text="Bot達o contorno" />

    <com.example.lib_design_system.button.TDCButton
        android:id="@+id/button_contained_disabled"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_margin_side"
        app:buttonType="contained"
        app:enabled="false"
        app:layout_constraintEnd_toEndOf="@id/button_outlined"
        app:layout_constraintStart_toStartOf="@id/button_outlined"
        app:layout_constraintTop_toBottomOf="@id/button_outlined"
        app:text="bot達o contido desativado" />

    <com.example.lib_design_system.button.TDCButton
        android:id="@+id/button_outlined_disabled"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_margin_side"
        app:buttonType="outlined"
        app:enabled="false"
        app:layout_constraintEnd_toEndOf="@id/button_contained_disabled"
        app:layout_constraintStart_toStartOf="@id/button_contained_disabled"
        app:layout_constraintTop_toBottomOf="@id/button_contained_disabled"
        app:text="Bot達o contorno" />

</androidx.constraintlayout.widget.ConstraintLayout>